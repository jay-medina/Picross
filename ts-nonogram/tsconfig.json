{
    "compilerOptions": {
        "rootDir": "src",
        "jsx": "react",
        "module": "es2015",
        "target": "es5",
        "lib": ["es6", "dom"],
        "noImplicitAny": false,
        "sourceMap": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}

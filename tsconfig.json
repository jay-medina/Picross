{
    "compilerOptions": {
        "rootDir": "src",
        "jsx": "react",
        "module": "esnext",
        "target": "es5",
        "lib": [
            "es6",
            "dom"
        ],
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}

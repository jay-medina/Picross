{
  "cacheDirectory": "./.jest",
  "transform": {
    "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "collectCoverage": false,
  "collectCoverageFrom": [
    "!**/src/index.tsx",
    "**/*.{ts,tsx}",
    "!**/node_modules/**"
  ],
  "coveragePathIgnorePatterns": [
    "<rootDir>/node_modules/",
    "<rootDir>/dist/"
  ],
  "coverageReporters": [
    "text",
    "text-summary",
    "html"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 70,
      "functions": 70,
      "lines": 70,
      "statements": 70
    }
  },
  "testRegex": "(\\.(test))\\.(ts|tsx|js)$",
  "moduleFileExtensions": [
    "js",
    "ts",
    "tsx",
    "json"
  ],
  "moduleNameMapper": {
    "\\.(css)$": "<rootDir>/__mocks__/styleMock.js"
  },
  "setupFiles": [
    "./config/polyfills",
    "./config/jest/enzyme.js"
  ]
}
